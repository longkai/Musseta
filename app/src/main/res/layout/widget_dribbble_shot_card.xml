<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:id="@id/root_view"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.GridLayout
      app:rowCount="3"
      app:columnCount="5"
      app:orientation="vertical"
      app:columnOrderPreserved="true"
      android:layout_marginBottom="8dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        tools:src="@drawable/common_full_open_on_phone"
        app:layout_columnSpan="5"
        android:id="@+id/image"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        app:layout_columnSpan="5"
        android:layout_height="8dp"
        />

    <ImageView
        android:id="@+id/avatar"
        tools:src="@mipmap/ic_chat_bubble_outline_black_24dp"
        android:layout_marginLeft="8dp"
        android:layout_width="@dimen/dribbble_player_avatar_bound"
        android:layout_height="@dimen/dribbble_player_avatar_bound"
        />

    <TextView
        android:id="@android:id/title"
        android:text="Text is beautiful."
        app:layout_columnWeight="1"
        android:textColor="#2F77AD"
        android:textSize="12sp"
        android:layout_marginLeft="9dp"
        />

    <TextView
        android:id="@+id/view_count"
        tools:text="25"
        android:drawableLeft="@mipmap/ic_view_count_16dp"
        android:layout_marginRight="12dp"
        style="@style/Dribbble.Shot"
        />

    <TextView
        android:id="@+id/comments_count"
        tools:text="25"
        android:drawableLeft="@mipmap/ic_comment_outline_16dp"
        android:layout_marginRight="12dp"
        style="@style/Dribbble.Shot"
        />

    <TextView
        android:id="@+id/like_count"
        android:drawableLeft="@mipmap/ic_like_outline_16dp"
        android:layout_marginRight="8dp"
        tools:text="25"
        style="@style/Dribbble.Shot"
        />
  </android.support.v7.widget.GridLayout>
</android.support.v7.widget.CardView>