<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:id="@id/root_view"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.GridLayout
      app:orientation="vertical"
      app:columnOrderPreserved="true"
      app:columnCount="2"
      app:rowCount="5"
      android:paddingBottom="4dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        tools:src="@mipmap/ic_chat_bubble_outline_black_24dp"
        android:id="@+id/image"
        app:layout_columnSpan="2"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@android:id/title"
        android:textColor="#323232"
        tools:text="Hello, World"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="16sp"
        app:layout_columnSpan="2"
        />

    <TextView
        android:id="@android:id/text1"
        android:textColor="#878787"
        android:textSize="12sp"
        tools:text="Text is beautiful!"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        app:layout_columnSpan="2"
        />

    <View
        android:background="?android:attr/listDivider"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_columnSpan="2"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/product_hunt_card_avatar_bound"
        android:layout_height="@dimen/product_hunt_card_avatar_bound"
        android:layout_marginLeft="8dp"
        app:layout_gravity="center_vertical"
        app:layout_columnSpan="1"
        />

    <TextView
        android:id="@+id/points"
        android:textColor="#878787"
        android:textSize="12sp"
        tools:text="25"
        android:drawableLeft="@mipmap/ic_triangle_16dp"
        android:drawablePadding="4dp"
        app:layout_columnSpan="1"
        android:layout_marginRight="8dp"
        app:layout_gravity="right|center_vertical"
        android:gravity="center_vertical"
        />
  </android.support.v7.widget.GridLayout>
</android.support.v7.widget.CardView>